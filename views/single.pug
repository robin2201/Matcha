                    p #{userToShow.city} , #{userToShow.country}
                    p #{userToShow.age}
                    p #{userToShow.bio}

                .col-lg-5
                    if userToShow.tags
                        .item
                            .item-content-block.tags
                                each tag in userToShow.tags
                                    p #{tag}


