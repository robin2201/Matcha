extends layout
include tools

block content
    include partials/navbar

    .container
        .row
            form.form-horizontal(method='POST', action='/profile/search')
                div.form-group
                    label.control-label Orientation
                        label.radio-inline Male
                            input#male(type='radio', name="gender", value='1')
                        label.radio-inline Female
                            input#female(type='radio', name="gender", value='0')
                        label.radio-inline bisexual
                            input#bisexual(type='radio', name="gender", value='2')
                div.form-group
                    .input-group.col-md-6
                        input.search-query.form-control(type='text', name="search", placeholder='Search')
                div.form-group
                    input#ageMin(type="text", name="ageMin", placeholder="Age min")
                    input#ageMax(type="text", name="ageMax", placeholder="Age max")
                div.form-group
                    input#distMin(type="text", name="distMin", placeholder="dist min")
                    input#distMax(type="text", name="distMax", placeholder="dist max")
                button.btn.btn-primary(type='submit') Search


        form.form-horizontal(method='POST', action='/profile/locations')
            div.form-group
                button.btn.btn-primary(type='submit') Location
        .row
            if (users)
                each elem in users
                    a(href="/users/view/:"+elem._id): .usersGallery.col-lg-3.col-md-3.col-sm-3.col-xs-6
                        h1= elem.firstname
                        li= elem.location.city
                        if (elem.gender === '1')
                            p &#9794;
                        else
                            p &#9792;
                        if(elem.age)
                            li= elem.age
                        each tag in elem.tags
                            p.tagsGallery.col-sm-6 #{tag}
                            //h1: span.label.label-info #{tag}
                        img(src='uploads/image-1488885210969.jpeg')
            script
                include ../node_modules/bootstrap-slider/dist/bootstrap-slider.min.js
            script
                include ../public/javascripts/scripts.js
