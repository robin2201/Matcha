extends ../index

block register
    .main.container
        .row
            form(method='POST' action='/users/register')
                div.form-group
                    label(for='name') FirstName:
                    input#name.form-control(type='text', placeholder='first' name='firstname')
                div.form-group
                    label(for='name') LastName:
                    input#name.form-control(type='text', placeholder='first' name='lastname')
                div.form-group
                    label(for='email') Email:
                    input#email.form-control(type='text', placeholder='name@email.com' name='email')
                div.form-group
                    label(for='pw') Password:
                    input#pw.form-control(type='password' name='password')
                div.form-group
                    label(for='pw2') Confirm Password:
                    input#pw2.form-control(type='password' name='cPassword')
                button.btn.btn-primary(type='submit') Sign up
