extends ../index

block login
     form.form-group.row.col-sm-4(action='/users/login', method='POST')
               .form-group.row
                 .col-sm-12
                   input.form-control(type='text', id='', placeholder='Username', name='firstname')
               .form-group.row
                 .col-sm-12
                   input.form-control(type='password', name='password', placeholder='Password')
               .form-group.row
                 .col-sm-6
                   button.btn.btn-primary.alert-info(type='submit') Sign In
               .form-group.row
                 .col-sm-6
                   a.btn.btn-primary.alert-warning(href='/profile/forgotPassword') Forgot your password?
