mixin userGallery(user)
    each elem in user
        .col-md-4.col-sm-6
            a.thumbnail(href="/users/view/:"+elem._id)
                .card-container
                    .card
                        .front
                            .cover
                                img(src='http://www.hdimageson.com/wp-content/uploads/2016/05/beach-images-tumblr-300x188.jpg')
                            .user
                                if elem.pics
                                    img.img-circle(src=elem.pics[0])
                                else
                                    img.img-circle.avatar(src="http://api.adorable.io/avatar/76/" + elem.firstname)
                            .content
                                .main
                                    h3.name #{elem.firstname}
                                    if elem.gender === '1'
                                        p.gender Male
                                    else
                                        p.gender Woman
                                    p.text-center
                                        | &quot;I&apos;m the new Sinatra, and since I made it here I can make it anywhere, yeah, they love me everywhere&quot;

                        .back
                            .header
                                h5.motto &quot;#{elem.bio}&quot;
                            .content
                                .main
                                    h4.text-center Interests
                                    if elem.tags
                                        each tag in elem.tags
                                            p.text-center #{tag}
                                    .stats-container
                                        .stats
                                            if elem.popularity
                                                h4 #{elem.popularity}
                                                p  Popularity score
                            .footer
                                .like
                                    form.form-horizontal(method="post", action="/profile/likeOther")
                                        input#like(type="hidden", value=elem._id, name="UsertoLike")
                                        button.btn.btn-danger(type="submit") ❤️


