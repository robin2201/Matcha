extends layout

block content
    include partials/navbar


    .container
        if (info === 'email')
            form.form-horizontal(method='POST', action='/profile/forgotPassword')
                div.form-group
                    input#email.form-control(type='email', placeholder='name@email.com' name='email', pattern='/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/')
                button(type="submit", value="Upload") Email
        else
            form.form-horizontal(method='POST', action='/profile/modifPass')
                div.form-group
                    label(for='pw') Password:
                    input#pw.form-control(type='password' name='password')
                div.form-group
                    label(for='pw2') Confirm Password:
                    input#pw2.form-control(type='password' name='cPassword')
                    input(type='hidden', name='id', value=id)
                button.btn.btn-primary(type='submit') Modify

