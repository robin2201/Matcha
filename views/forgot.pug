extends layout

block content
    .jumbotron
        .col-sm-8
            if (info === 'email')
                form.form-horizontal(method='POST', action='/profile/forgotPassword')
                    div.form-group.row
                        .col-sm-6
                            input#email.form-control(type='email', placeholder='name@email.com' name='email', pattern='/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/')
                    button.btn.btn-primary.btn-success(type="submit", value="Upload") Email
            else
                form.form-horizontal(method='POST', action='/profile/modifPass')
                    div.form-group.row
                        .col-sm-6
                            label(for='pw') Password:
                            input#pw.form-control(type='password' name='password')
                    div.form-group.row
                        .col-sm-6
                            label(for='pw2') Confirm Password:
                            input#pw2.form-control(type='password' name='cPassword')
                            input(type='hidden', name='id', value=id)
                    button.btn.btn-primary.btn-success(type='submit') Modify
